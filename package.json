{
    "name": "wpde",
    "version": "2.1.9",
    "author": "Jindřich Ručil",
    "license": "MIT",
    "description": "WordPress Development Environment (WPDE) is a fantastic starting point for creating a WordPress template. It includes responsive and accessibility design, necessary files, and features for proper template functioning, as well as a settings page.",
    "keywords": [
        "wordpress",
        "wp",
        "dev",
        "development",
        "environment",
        "env",
        "template",
        "theme",
        "responsive",
        "light",
        "dark",
        "bootstrap",
        "fontawesome",
        "webpack",
        "sass",
        "cookieconsent",
        "prettier",
        "magnificpopup",
        "editorconfig"
    ],
    "main": "index.js",
    "devDependencies": {
        "@eslint/js": "^9.8.0",
        "css-loader": "^7.1.1",
        "eslint": "^9.8.0",
        "globals": "^15.9.0",
        "ignore-emit-webpack-plugin": "^2.0.6",
        "mini-css-extract-plugin": "^2.9.0",
        "prettier": "^3.2.5",
        "sass": "^1.77.1",
        "sass-loader": "^14.2.1",
        "stylelint": "^16.8.1",
        "stylelint-prettier": "^5.0.2",
        "webpack": "^5.91.0",
        "webpack-cli": "^5.1.4"
    },
    "dependencies": {
        "bootstrap": "5.3.3"
    },
    "scripts": {
        "start": "webpack",
        "format": "prettier --write src/**/*.{js,jsx,ts,tsx,json,css,scss,sass}",
        "format-php": "composer run-script format-php",
        "format-php-docker": "docker-compose run --rm composer run format-php",
        "lint": "eslint src/js/**/*.js",
        "lint:fix": "eslint src/js/**/*.js --fix",
        "lint-styles": "stylelint 'src/scss/**/*.{scss,sass,css}'",
        "lint-styles-fix": "stylelint 'src/scss/**/*.{scss,sass,css}' --fix",
        "composer-install-docker": "docker-compose run --rm composer install"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Rucilos/wpde"
    }
}
