{
    "plugins": [
      	"stylelint-scss",
      	"stylelint-prettier"
    ],
    "rules": {
		"prettier/prettier": true,
		"indentation": null,
		"string-quotes": null, 
		"scss/at-rule-no-unknown": true,
		"color-no-invalid-hex": true,
		"property-no-unknown": true,
		"block-no-empty": true
    }
}
  